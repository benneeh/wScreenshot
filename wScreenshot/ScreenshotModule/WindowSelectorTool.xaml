<Window x:Class="wScreenshot.ScreenshotModule.WindowSelectorTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RedBoxTool" Height="200" Width="300" Background="Transparent"
        ShowInTaskbar="False" Topmost="True" BorderThickness="0" WindowStyle="None"
        Padding="0" Margin="0" AllowsTransparency="True" Loaded="Window_Loaded" ScrollViewer.VerticalScrollBarVisibility="Disabled"
        ResizeMode="NoResize">
    <Canvas>
        <Border Name="redBord" Canvas.Left="10" Canvas.Top="10" Width="200" Height="90" Margin="0" Padding="0" BorderThickness="1" BorderBrush="#ff0000">
            <Border.Effect>
                <BlurEffect Radius="3" />
            </Border.Effect>
        </Border>
    </Canvas>
</Window>